<form class="flexcol {{cssClass}}" autocomplete="off">
    <header class="sheet-header" style="flex: 0;">
        <img class="profile-img" src="{{data.img}}" data-edit="img" title="{{data.name}}" />
        <div class="header-fields">
            <h1 class="charname">
                <input name="name" type="text" value="{{data.name}}" placeholder="Name" />
            </h1>
        </div>
    </header>
    <select name="system.subtype" style="flex: 0;">
        <option value=""></option>
        {{#each abilityTypes as |attr key|}}
        <option {{#when key 'eq' @root.item.system.subtype}}selected{{/when}} value="{{key}}">{{localize attr}}</option>
        {{/each}}
    </select>
    <div class="flexcol" style="flex: 1;">
        <div class="section-header">
            {{localize "BREAK.Description"}}
        </div>
        {{editor descriptionHTML target="system.description" button=true owner=owner editable=editable}}
    </div>
</form>
