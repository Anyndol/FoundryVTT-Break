<article id="active-effects-panel">
    {{#each effects as |effect|}}
        <div class="effect-item" data-item-id="{{effect._id}}">
            <div class="effect-info">
                <h1>
                    {{effect.name}}
                    <a data-action="send-to-chat" data-tooltip="{{localize "BREAK.SendToChat"}}"><i class="fa-solid fa-fw fa-comment-alt" ></i></a>
                </h1>
                <div class="description">
                    {{{effect.description}}}
                </div>
            </div>
            <div class="icon" style="background-image: url({{effect.img}})">
                {{#if effect.system.expired}}
                    <span class="expired">{{localize "PF2E.EffectPanel.Expired"}}</span>
                {{/if}}
            </div>
        </div>
    {{/each}}
</article>